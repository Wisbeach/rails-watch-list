<div class="container p-5">
   <h2 class="text-center" style="color: white; font-weight: bold;">Create new Bookmark</h2>

  <%= simple_form_for [@list, @bookmark], html: { class: 'form-horizontal' } do |f| %>
    <div class="form-group">
      <%= f.label :movie, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.association :movie, label_html: { class: 'sr-only' }, class: 'form-control custom-select' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :comment, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_area :comment, rows: 3, class: 'form-control', placeholder: 'Enter your comment' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit 'Create Bookmark', class: 'btn btn-primary btn-lg' %>
      </div>
    </div>
  <% end %>

  <%= link_to 'Back', list_path(@list), class: 'btn btn-secondary' %>
</div>
